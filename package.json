{
  "name": "node-ts-boilerplate",
  "version": "1.0.0",
  "description": "This project is aimed to give a base ground for people to get started with Node project using typescript.",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "tsc && node dist/index.js",
    "start:dev": "nodemon -e ts -w ./src -x npm start",
    "test": "npm run build && mocha './dist/test/*.spec.js'",
    "test:coverage": "tsc && nyc --reporter=html npm test",
    "lint": "eslint ./src/ --cache --ext .ts --fix",
    "pretty": "prettier --write src"
  },
  "repository": {
    "type": "git",
    "url": "\\"
  },
  "keywords": [
    "typescript",
    "node.js",
    "boilerplate"
  ],
  "author": "Deepak Mali",
  "license": "ISC",
  "devDependencies": {
    "@types/chai": "^4.2.18",
    "@types/config": "^0.0.39",
    "@types/express": "^4.17.6",
    "@types/mocha": "^8.2.2",
    "@typescript-eslint/eslint-plugin": "^4.23.0",
    "@typescript-eslint/eslint-plugin-tslint": "^4.23.0",
    "@typescript-eslint/parser": "^4.23.0",
    "chai": "^4.3.4",
    "eslint": "^7.26.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-prefer-arrow": "^1.2.3",
    "mocha": "^10.2.0",
    "nodemon": "^2.0.20",
    "prettier": "^2.4.1",
    "tslint": "^5.20.1",
    "typescript": "^3.9.10"
  },
  "dependencies": {
    "chalk": "^3.0.0",
    "config": "^3.3.6",
    "express": "^4.18.2",
    "joi": "^17.4.0",
    "moment": "^2.29.4",
    "mongoose": "^5.13.15",
    "nyc": "^15.1.0",
    "winston": "^3.3.3"
  }
}
